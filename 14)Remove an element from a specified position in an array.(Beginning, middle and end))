#include<stdio.h>

int main() {
    int arr[100], n, i, choice;

    // Input array size
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Input array elements
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Show menu
    printf("\nWhere do you want to delete the element?\n");
    printf("1. Beginning\n");
    printf("2. Middle\n");
    printf("3. End\n");
    printf("Enter your choice (1-3): ");
    scanf("%d", &choice);

    // Delete using ifâ€“else
    if(choice == 1) {
        // Beginning: shift all elements left by one
        for(i = 0; i < n - 1; i++) {
            arr[i] = arr[i + 1];
        }
        n--;
        printf("\nFirst element deleted.\n");
    }

    else if(choice == 2) {
        // Middle: find middle index and shift left
        int mid = n / 2;
        for(i = mid; i < n - 1; i++) {
            arr[i] = arr[i + 1];
        }
        n--;
        printf("\nMiddle element deleted.\n");
    }

    else if(choice == 3) {
        // End: just reduce the size
        n--;
        printf("\nLast element deleted.\n");
    }

    else {
        printf("Invalid choice!\n");
        return 0;
    }

    // Display updated array
    printf("\nArray after deletion:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}