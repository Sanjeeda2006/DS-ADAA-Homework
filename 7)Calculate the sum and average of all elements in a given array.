#include<stdio.h>

int main() {
    int n, i;
    float sum = 0, avg;

    // Ask the user for number of elements
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr[n]; // Declare array

    // Input elements
    printf("Enter %d integers:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
        sum += arr[i]; // Add to sum
    }

    // Calculate average
    avg = sum / n;

    // Display result
    printf("Sum of all elements = %.2f\n", sum);
    printf("Average of all elements = %.2f\n", avg);

    return 0;
}