#include <stdio.h>

// Function to perform binary search using iteration
int binary_search(int A[], int n, int x)
{
    int low, high, mid;
    low = 0;
    high = n - 1;

    while (low <= high) {
        mid = (low + high) / 2;

        if (A[mid] == x) {
            return mid;   // The target is found
        }

        if (A[mid] < x) {
            low = mid + 1;  // Search in the right half
        } else {
            high = mid - 1; // Search in the left half
        }
    }

    return -1;  // The target is not found
}

int main()
{
    int n, x, i, result;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int A[n];
    printf("Enter %d elements in sorted order:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &A[i]);
    }

    printf("Enter the element to search: ");
    scanf("%d", &x);

    result = binary_search(A, n, x);

    if (result == -1)
        printf("Element %d not found in the array.\n", x);
    else
        printf("Element %d found at index %d (position %d).\n", x, result, result + 1);

    return 0;
}