#include<stdio.h>

int main() {
    int arr[100], n, i, value, choice;

    // Input array size
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Input array elements
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Show menu
    printf("\nWhere do you want to insert the new element?\n");
    printf("1. Beginning\n");
    printf("2. Middle\n");
    printf("3. End\n");
    printf("Enter your choice (1-3): ");
    scanf("%d", &choice);

    // Input new value
    printf("Enter the value to insert: ");
    scanf("%d", &value);

    // Insert using ifâ€“else
    if(choice == 1) {
        // Beginning
        for(i = n; i > 0; i--) {
            arr[i] = arr[i - 1];
        }
        arr[0] = value;
        n++;
    }

    else if(choice == 2) {
        // Middle
        int mid = n / 2;
        for(i = n; i > mid; i--) {
            arr[i] = arr[i - 1];
        }
        arr[mid] = value;
        n++;
    }

    else if(choice == 3) {
        // End
        arr[n] = value;
        n++;
    }

    else {
        printf("Invalid choice!\n");
        return 0;
    }

    // Display new array
    printf("\nArray after insertion:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}