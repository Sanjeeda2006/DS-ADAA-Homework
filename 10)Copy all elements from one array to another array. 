#include<stdio.h>

int main() {
    int n, i;

    // Ask the user for number of elements
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr1[n], arr2[n]; // arr1 = source, arr2 = destination

    // Input elements in first array
    printf("Enter %d integers:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr1[i]);
    }

    // Copy elements from arr1 to arr2
    for(i = 0; i < n; i++) {
        arr2[i] = arr1[i];
    }

    // Display copied elements
    printf("Elements copied to the second array:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr2[i]);
    }

    return 0;
}